{
    "manifest_version": 3,
    "name": "Auto Giải Bài Tập LMS-ICTU",
    "version": "1.5",
    "description": "Tự động giải bài tập trên hệ thống LMS-ICTU với giao diện đẹp và nhiều cải tiến về hiệu suất, độ tin cậy và tính năng.",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "clipboardWrite",
        "storage"
    ],
    "host_permissions": [
        "*://lms.ictu.edu.vn/*"  // Hoặc các URL cụ thể nếu có thể
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    }
}